<ContentDialog
  x:Class="Singulink.UI.Navigation.MessageDialog"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:Singulink.UI.Navigation"
  xmlns:sys="using:System"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="{x:Bind Model.Title}">

  <Grid RowDefinitions="*,Auto" MaxWidth="750">
    <ScrollViewer>
      <TextBlock Text="{x:Bind Model.Message}" TextWrapping="Wrap" />
    </ScrollViewer>

    <ItemsControl x:Name="ButtonItemsControl" Grid.Row="1" Margin="0,20,0,0" HorizontalAlignment="Right" ItemsSource="{x:Bind Model.ButtonLabels}">
      <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
          <StackPanel Orientation="Horizontal" />
        </ItemsPanelTemplate>
      </ItemsControl.ItemsPanel>

      <ItemsControl.ItemTemplate>
        <DataTemplate x:DataType="sys:String">
          <Button Content="{x:Bind}" Click="OnButtonClick" />
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
  </Grid>
</ContentDialog>
