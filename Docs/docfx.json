{
  "metadata": [
    {
      "properties": {
          "TargetFramework": "net8.0"
      },
      "src": [
        {
          "files": [
            "Singulink.UI.Navigation/Singulink.UI.Navigation.csproj",
            "Singulink.UI.Navigation.MvvmToolkit/Singulink.UI.Navigation.MvvmToolkit.csproj",
            "Singulink.UI.Navigation.WinUI/Singulink.UI.Navigation.WinUI.csproj",
            "Singulink.UI.Tasks/Singulink.UI.Tasks.csproj",
            "Singulink.UI.Xaml.WinUI/Singulink.UI.Xaml.WinUI.csproj"
          ],
          "src": "../Source"
        }
      ],
      "dest": "api",
      "filter": "filterConfig.yml",
      "memberLayout": "separatePages",
      "includeExplicitInterfaceImplementations": true,
      "disableGitFeatures": true,
      "disableDefaultFilter": false
    }
  ],
  "build": {
    "globalMetadata": {
      "_appTitle": "Singulink UI Toolkit",
      "_appName": "UI Tookit",
      "_appLogoPath": "images/logo.png",
      "_appFaviconPath": "images/favicon.png",
      "_copyrightFooter": "Â© Singulink. All rights reserved.",
      "_enableSearch": true,
      "_enableNewTab": true
    },
    "template": ["default", "templates/singulinkfx"],
    "xref": [ "https://learn.microsoft.com/en-us/dotnet/.xrefmap.json" ],
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "_site",
    "disableGitFeatures": true,
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "postProcessors": [],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false
  }
}
