<Page
  x:Class="Playground.Views.DialogTest.DialogTestPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:Playground.Views.DialogTest"
  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

  <Grid>
    <StackPanel Spacing="10" MaxWidth="200">
      <Button Content="Show Dialog" Command="{x:Bind Model.ShowDialogCommand}"/>
      <Button Content="Show Two Dialogs" Command="{x:Bind Model.ShowTwoDialogsCommand}"/>
    </StackPanel>
  </Grid>
</Page>
